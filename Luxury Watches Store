<body>
    <button class="lang-toggle" onclick="toggleLanguage()">
        <span class="lang-text">English</span>
    </button>

    <header>
        <div class="container">
            <h1>00:00</h1>
            <p class="subtitle" data-ar="متجر الساعات الفاخرة" data-en="Luxury Watches Store">متجر الساعات الفاخرة</p>
        </div>
    </header>

    <div class="container">
        <div class="products-grid" id="productsGrid"></div>
    </div>

    <footer>
        <p data-ar="© 2024 متجر 00:00 للساعات - جميع الحقوق محفوظة" data-en="© 2024 00:00 Watches Store - All Rights Reserved">© 2024 متجر 00:00 للساعات - جميع الحقوق محفوظة</p>
    </footer>

    <script>
        const products = [
            { brand: 'Rolex ', brandAr: ' Rolex ', price: 449, oldPrice: 600 },
            { brand: 'Rolex ', brandAr: ' Rolex ', price: 280, oldPrice: 450 },
            { brand: 'Rolex ', brandAr: ' Rolex ', price: 300, oldPrice: 470 },
            { brand: 'Rolex ', brandAr: ' Rolex ', price: 490, oldPrice: 620 },
            { brand: 'Rolex ', brandAr: ' Rolex ', price: 400, oldPrice: 580 },
            { brand: 'Tissot', brandAr: ' Tissot ', price: 380, oldPrice: 450 },
            { brand: 'Tissot', brandAr: ' Tissot ', price: 560, oldPrice: 700 },
            { brand: 'Tissot', brandAr: ' Tissot ', price: 500, oldPrice: 640 },
            { brand: 'Casio', brandAr: 'Casio', price: 230, oldPrice: 300 },
            { brand: 'Casio', brandAr: 'Casio', price: 340, oldPrice: 490 }
        ];

        let currentLang = 'ar';

        const translations = {
            ar: {
                insteadOf: 'بدلاً من',
                whatsapp: 'WHATSAPP',
                instagram: 'INSTAGRAM',
                egp: 'جنيه'
            },
            en: {
                insteadOf: 'Instead of',
                whatsapp: 'WhatsApp ',
                instagram: 'Instagram ',
                egp: 'EGP'
            }
        };

        function renderProducts() {
            const grid = document.getElementById('productsGrid');
            const t = translations[currentLang];
            
            grid.innerHTML = products.map(product => `
                <div class="product-card">
                    <div class="product-image">⌚</div>
                    <div class="product-info">
                        <h3 class="product-brand">${currentLang === 'ar' ? product.brandAr : product.brand}</h3>
                        <div class="price-container">
                            <span class="current-price">${product.price} ${t.egp}</span>
                            <div class="old-price-wrapper">
                                <span>${t.insteadOf}</span>
                                <span class="old-price">${product.oldPrice} ${t.egp}</span>
                            </div>
                        </div>
                        <div class="buttons-container">
                            <a href="https://wa.me/201103693893?text=${encodeURIComponent('مرحباً، أود الاستفسار عن ' + (currentLang === 'ar' ? product.brandAr : product.brand))}" 
                               class="contact-btn whatsapp-btn" target="_blank">
                                ${t.whatsapp}
                            </a>
                            <a href="https://www.instagram.com/watches_store_0000?igsh=NGl0dmpiNWltMG9m" 
                               class="contact-btn instagram-btn" target="_blank">
                                ${t.instagram}
                            </a>
                        </div>
                    </div>
                </div>
            `).join('');
        }

        function toggleLanguage() {
            const html = document.documentElement;
            const langBtn = document.querySelector('.lang-text');
            
            if (currentLang === 'ar') {
                currentLang = 'en';
                html.setAttribute('lang', 'en');
                html.setAttribute('dir', 'ltr');
                langBtn.textContent = 'العربية';
            } else {
                currentLang = 'ar';
                html.setAttribute('lang', 'ar');
                html.setAttribute('dir', 'rtl');
                langBtn.textContent = 'English';
            }

            document.querySelectorAll('[data-ar]').forEach(el => {
                el.textContent = el.getAttribute('data-' + currentLang);
            });

            renderProducts();
        }

        renderProducts();
    </script>
</body>
</html>
